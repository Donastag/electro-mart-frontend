# Staging/Preview Environment
# Payload CMS Connection (can use same as production or separate staging instance)
PAYLOAD_API_URL=https://elecromart-v3.vercel.app/api
NEXT_PUBLIC_PAYLOAD_API_URL=https://elecromart-v3.vercel.app/api

# Supabase Staging
NEXT_PUBLIC_SUPABASE_URL=your-staging-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-staging-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-staging-supabase-service-role-key

# Gemini AI Staging
NEXT_PUBLIC_GEMINI_API_KEY=your-staging-gemini-api-key

# Environment indicator
NEXT_PUBLIC_ENV=staging

# Enable preview features
NEXT_PUBLIC_ENABLE_PREVIEW_FEATURES=true
